<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray"
    tools:context=".viewcontroller.fragment.signleave.employeLeave.CreateLeave">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <TextView
            android:id="@+id/text1"
            android:layout_width="244dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Số Ngày Nghỉ"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/txt_day_leave"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_below="@id/text1"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/shape_conner_round"
            android:gravity="start|center"
            android:hint="1"
            android:inputType="number"
            android:padding="10dp"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_day_leave"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Thời gian áp dùng đơn"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/txt_time"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_below="@id/text2"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/shape_conner_round"
            android:gravity="start|center"
            android:inputType="date"
            android:padding="10dp"
            android:text=""
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/text3"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_time"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Lí do"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/editLido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text3"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/shape_conner_round"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:minHeight="200dp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/b_nopdon"
            android:layout_width="311dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/editLido"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="50dp"
            android:background="@color/purple_500"
            android:text="Nộp đơn"

            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
</ScrollView>